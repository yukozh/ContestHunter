@{
    ViewBag.Title = "Register";
}

<script>
    function RegSucc() { $('#RegisterContent').removeClass('alert-info').addClass('alert-success') }
    function RegFail() { $('#RegisterContent').removeClass('alert-info').addClass('alert-error') }
</script>
<div class="span12" style="margin-top: 20px; padding: 10px">
    <div id="RegisterContent" class="alert alert-info" style="text-align: center;">
        <table style="text-align: right; margin: 100px auto">
            <tr>
                <td colspan="2" style="padding-bottom:20px">
                    <div class="progress progress-striped progress-success active" style="margin:0px -100px">
                        <div class="bar" style="width: 5%;"></div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>用户名：</td>
                <td>@Html.TextBox("UserName", null, new { style = "width:200px;" })</td>
            </tr>
            <tr>
                <td>密码：</td>
                <td>@Html.Password("Password", null, new { style = "width:200px;" })</td>
            </tr>
            <tr>
                <td>重复密码：</td>
                <td>@Html.Password("PasswordAgain", null, new { style = "width:200px;" })</td>
            </tr>
            <tr>
                <td>验证邮箱：</td>
                <td>@Html.TextBox("Email", null, new { style = "width:200px;" })</td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center">
                    <input class="btn btn-warning" type="submit" value="下一步" />
                </td>
            </tr>
        </table>
    </div>
</div>
