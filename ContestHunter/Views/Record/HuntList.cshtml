@{
    ViewBag.Title = "HuntList";
}

<style type="text/css">
    .table
    {
        background-color: white;
        color: black;
        margin: 0px;
    }

        .table th,
        .table td
        {
            text-align: center;
            vertical-align: middle;
            font-family: 微软雅黑;
        }
</style>

<div class="span12">
    <div class="alert alert-info" style="margin-top: 20px; padding: 0px">
        <div class="form-search" style="text-align: right; margin: 0px 5px">
            <h4 style="float: left; font-family: 微软雅黑; font-weight: normal;">提交记录</h4>
            <div style="float: right; margin-top: 5px">
                <input type="text" class="input-small search-query" placeholder="用户名">
                <input type="text" class="input-small search-query" placeholder="题目名称">
                <input type="text" class="input-small search-query" placeholder="比赛名称">
                <select class="input-small">
                    <option value="">状态</option>
                    <option value="">猎杀成功</option>
                    <option value="">猎杀失败</option>
                    <option value="">数据不合法</option>
                    <option value="">编译错误</option>
                    <option value="">正在测评</option>
                    <option value="">其他错误</option>
                </select>
                <input type="submit" class="btn btn-primary btn-small" value="查询" />
            </div>
            <div style="clear: both"></div>
        </div>
        <table class="table table-bordered table-striped table-hover">
            <colgroup>
                <col style="width: 260px">
                <col style="width: 150px">
                <col style="width: 300px">
                <col style="width: 60px">
                <col style="width: 170px">
            </colgroup>
            <thead>
                <tr>
                    <th>题目名称</th>
                    <th>评测结果</th>
                    <th>猎杀者/被猎杀</th>
                    <th>得分</th>
                    <th>提交时间</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <a href="#">OrzSJY Problem</a>
                    </td>
                    <td>
                        <span class="label label-success" style="font-size: 15px">猎杀成功</span>
                        @*失败：label label-important；数据不合法/编译错误：label label-warning；正在评测：label label-info；其它：label*@
                    </td>
                    <td>
                        <a href="#">VariantF</a> → <a href="#">Damin</a>
                    </td>
                    <td>
                        @*<span style="color: green"><b>100</b></span>*@
                        <span style="color: gray"><b>-25</b></span>
                    </td>
                    <td>2013/2/25 23:08:00</td>
                </tr>
            </tbody>
        </table>
        @*此处翻页，样式同record页面<div class="pagination" style="text-align: center; margin: 3px">
                @Html.HiddenFor(x => x.PageIndex)
                <script>
                    function ChangePage(index) {
                        $('#PageIndex').val(index);
                        $('#frmList').submit();
                    }
                </script>
                <ul>
                    @if (Model.PageIndex != 0)
                    {
                        <li><a href="javascript:ChangePage(0)">«</a></li>
                    }
                    @for (int i = Math.Max(0, Model.PageIndex - 5); i < Math.Min(Model.PageCount, Model.PageIndex + 5); i++)
                    {
                        if (i == Model.PageIndex)
                        {
                        <li class="active"><a href="javascript:ChangePage( @i )">@(i + 1)</a></li>
                        }
                        else
                        {
                        <li><a href="javascript:ChangePage( @i )">@(i + 1)</a></li>
                        }
                    }
                    @if (Model.PageIndex != Model.PageCount - 1)
                    {
                        <li><a href="javascript:ChangePage(@(Model.PageCount - 1))">»</a></li>
                    }
                </ul>
            </div>*@
    </div>
</div>
