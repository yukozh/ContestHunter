@model string

@{
    ViewBag.Title = "出问题了";
}
@* TODO 本页显示不可恢复的错误，通常它们是由于用户非法修改页面参数引起的 *@

<div class="span12">
    <div class="alert alert-error" style="margin-top:30px; min-height:350px; ">
        <div style="margin:50px">
            <h3><Img src="/Image/Error.gif" style="margin-right:20px"/>Oh,Shit~!</h3>
            <h4>系统傲娇了，乃对Ta捉了神马>_<？</h4>
        </div>
        <div class="alert alert-warning" style="font-size: large;padding-left:50px">@Model</div>
        <div class="btn-group" style="text-align:center;">
            @Html.ActionLink("主页","Index","Home",null,new{@class="btn btn-warning",style="display:inline-block;"})
            <script>
                if (history.length > 1) {
                    document.write('<button onclick="history.back()" class="btn btn-primary">后退</button>');
                }
            </script>
        </div>
    </div>
</div>
